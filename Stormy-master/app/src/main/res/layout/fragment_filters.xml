<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="false"
    android:background="#E6e32d3f"
    android:orientation="vertical">

    <TextView
        android:id="@+id/townFilterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Town:"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/townFilter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/townFilterItems" />


    <TextView
        android:id="@+id/zipFilterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Zip:"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/zipFilter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/zipFilterItems" />/>

    <TextView
        android:id="@+id/bedroomsFilterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Min bedrooms:"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/bedroomsFilter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/bedroomsFilterItems" />/>

    <TextView
        android:id="@+id/priceFilterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Max price:"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/priceFilter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/priceFilterItems" />/>

    <TextView
        android:id="@+id/sizeFilterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Min size:"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/sizeFilter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/sizeFilterItems" />/>

    <TextView
        android:id="@+id/categoryFilterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Category:"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/categoryFilter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/categoryFilterItems" />/>

    <TextView
        android:id="@+id/bathroomsFilterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="MIn bathrooms:"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/bathroomsFilter"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/bathroomsFilterItems" />/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorAccent"
        android:text="@android:string/search_go"
        android:textColor="@android:color/background_light" />
</LinearLayout>