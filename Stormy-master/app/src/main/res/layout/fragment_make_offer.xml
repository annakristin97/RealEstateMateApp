<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MakeOfferFragment"
    android:animationCache="false"
    android:background="@color/colorExtra2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="516dp"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="56dp"
        android:paddingRight="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:visibility="visible">

        <TextView
            android:id="@+id/MakeOfferTItle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Offer on this property"
            android:textColor="@color/colorText"
            android:textSize="36sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/OfferAmount"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            app:hintTextAppearance="@style/HintText">

            <EditText
                android:id="@+id/input_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Offer Amount"
                android:inputType="text"
                android:textColor="@color/colorText"
                android:textColorHighlight="@color/colorText"
                android:textColorLink="@color/colorText"
                android:textCursorDrawable="@color/colorText" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/makeOfferButtonID"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/colorButton"
            android:text="make offer"
            android:textColor="@color/colorText"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/noUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#F80404"
            android:textSize="20sp" />

        <Button
            android:id="@+id/goToLogin"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/colorButton"
            android:text="Sign in"
            android:textColor="@color/colorText"
            android:visibility="invisible"
            tools:visibility="invisible" />

    </LinearLayout>


</FrameLayout>